<h1><%= @album.title %></h1>

<h2>Artist: <%= Band.find_by_id(@album.band_id).name %></h2>
<h3>Release year: <%= @album.year %></h3>
<h3><%= @album.live? ? "Live" : "Studio Recorded" %></h3>

<% tracks = @album.tracks %>
<% unless tracks.empty? %>
  <h2 class="underline">Tracks</h2>
<% end %>

<ul>
  <% tracks.each do |track| %>
    <li class="feature-container">
      <a href="<%= track_url(track) %>"><%= track.title %></a>
    </li>
  <% end %>
</ul>

<a href="<%= new_album_track_url(@album) %>" class="button">Add Track</a>
<a href="<%= edit_album_url(@album) %>" class="button">Edit Album</a>
<%= render 'shared/delete_button', obj: @album %>